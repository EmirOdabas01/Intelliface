@model LocationDto

@{

    var locations = Model.Locations ?? new List<SelectListItem>();
}

<link rel="stylesheet" href="~/css/create.css" />
<main class="main">
    <div class="topbar">
        <input type="text" placeholder="Searchbox"
               style="padding: 8px 12px; width: 300px; border: 1px solid #ccc; border-radius: 5px;">
        <div>
            <img src="images/man-user-circle-icon copy.svg" alt="User"
                 style="width: 50px; height: 50px; border-radius: 50%; vertical-align: middle;">
        </div>
    </div>

    <div class="title">Employee</div>
    <div class="breadcrumb">Manage / Department / <strong>Add Department</strong></div>

    <div class="form-container">
        <h3> Add an Department </h3>

        <form asp-action="Create" asp-controller="Department" method="post">
            <div class="row">
                <input type="text" placeholder="Name" name="name" style="background-color:#2b2b3d00;">
            </div>

            <div class="form-group">
                <label for="SelectedDepartmentId">Department</label>
                <select asp-for="Id" asp-items="locations" class="form-control" name="locationId" style="background-color:#2b2b3d00;">
                </select>
            </div>

            <div class="buttons">
                <button type="submit" class="submit-btn">Submit</button>
                <button type="reset" class="reset-btn">Reset</button>
            </div>
        </form>
    </div>
</main>
