<link rel="stylesheet" href="~/css/create.css"/>
    <main class="main">
        <div class="topbar">
            <input type="text" placeholder="Searchbox"
                   style="padding: 8px 12px; width: 300px; border: 1px solid #ccc; border-radius: 5px;">
            <div>
                <img src="images/man-user-circle-icon copy.svg" alt="User"
                     style="width: 50px; height: 50px; border-radius: 50%; vertical-align: middle;">
            </div>
        </div>

        <div class="title">Employee</div>
        <div class="breadcrumb">Manage / Employee / <strong>Add Employee</strong></div>

        <div class="form-container">
            <h3>Add an Employee</h3>
            <form>
                <input type="text" placeholder="Name" style="background-color:#2b2b3d00;">
                <div class="row">
                    <input type="text" class="username" placeholder="Username"
                           style="margin-right: 4%;background-color:#2b2b3d00;">
                    <input type="password" class="password" placeholder="Password" style="background-color:#2b2b3d00;">
                </div>
                <input type="email" class="email" placeholder="sam@gmail.com" style="background-color:#2b2b3d00;">
                <input type="text" class="address" placeholder="Apartment, studio, or floor"
                       style="background-color:#2b2b3d00;">
                <div class="buttons">
                    <button type="submit" class="submit-btn">Submit</button>
                    <button type="reset" class="reset-btn">Reset</button>
                </div>
            </form>
        </div>
    </main>

  