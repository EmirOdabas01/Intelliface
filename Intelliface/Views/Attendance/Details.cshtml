@model List<ReadVM<AttendanceVM>>
<link rel="stylesheet" href="~/css/attendance.css"/>
    <main class="main">
        <div class="topbar">
            <input type="text" placeholder="Search" style="padding: 8px 12px; width: 300px; border: 1px solid #ccc; border-radius: 5px;">
            <div>
                <img src="images/man-user-circle-icon copy.svg" alt="User" style="width: 50px; height: 50px; border-radius: 50%; vertical-align: middle;">
            </div>
        </div>

        <div class="title">Attendance</div>

        <div class="form-box">
            <label for="date">Date</label>
            <input type="date" id="date" name="date" value="2025-05-15">
            <button>Generate Sheet</button>
        </div>

        <div class="table-box">
            <h4>Subject Report</h4>
            <table>
                <thead>
                    <tr>
                        <th>Employee Id</th>
                        <th>Attendance Date</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                    </tr>
                </thead>
                <tbody>
                   @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].data.employeeId</td>
                            <td>@Model[i].data.attendanceDate</td>
                            <td>@Model[i].data.checkIn</td>
                            <td>@Model[i].data.checkOut</td>
                        </tr>
                    }
                   }
                </tbody>
            </table>
        </div>
    </main>
